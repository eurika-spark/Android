<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/normal_gray"
    android:orientation="vertical" >
    
    <TextView 
        android:gravity="center_horizontal"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:textSize="23sp"
        android:textColor="@color/normal_white"
        android:textStyle="bold"
        android:layout_marginTop="50dp"
        android:text=" Check and Update to Latest if You Want!"
        />
    
    <LinearLayout 
		android:layout_width="fill_parent"        
		android:layout_height="50dp"
		android:orientation="horizontal"
		android:layout_marginTop="35dp"
        android:gravity="center_horizontal|center_vertical"
        >
	    <Button 
	        android:id="@+id/update_btn"
	        android:layout_width="160dp"
	        android:layout_height="fill_parent"
	        android:text="@string/check_update_check_btn"
			style="@style/main_textBlock_btn_blue"
	        android:gravity="center_horizontal|center_vertical"
	        />
    </LinearLayout>

    <ImageView android:id="@+id/update_loading_view" 
         android:layout_width="95.0dip" 
         android:layout_height="95.0dip"
         android:layout_gravity="center" 
         android:visibility="gone"
         />
    
    <Button android:id="@+id/download_cancel_btn"
        android:layout_width="110dp"
        android:layout_height="45dp"
        android:visibility="gone"
        />
    
</LinearLayout>
