<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="main_textBlock">
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:layout_margin">3dp</item>
    </style>
    
	<style name="main_textBlock_btn">
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
	<style name="main_textBlock_btn_blue" parent="main_textBlock_btn">
        <item name="android:background">@color/bk_blue</item>
        <item name="android:textColor">@color/txt_blue</item>
    </style>
	    
    <style name="main_textBlock_orange" parent="main_textBlock">
        <item name="android:background">@color/bk_yellow</item>
        <item name="android:textColor">@color/txt_yellow</item>
    </style>
    
	<style name="main_textBlock_blue" parent="main_textBlock">
        <item name="android:background">@color/bk_blue</item>
        <item name="android:textColor">@color/txt_blue</item>
    </style>
    
	<style name="main_textBlock_mulberry" parent="main_textBlock">
        <item name="android:background">@color/bk_mulberry</item>
        <item name="android:textColor">@color/txt_mulberry</item>
    </style>
    
	<style name="main_textBlock_lightgreen" parent="main_textBlock">
        <item name="android:background">@color/bk_green</item>
        <item name="android:textColor">@color/txt_green</item>
    </style>
    
	<style name="main_textBlock_pink" parent="main_textBlock_shadow">
        <item name="android:background">@drawable/text_view_bk_gradient</item>
        <item name="android:textColor">@color/txt_dark_violet</item>
    </style>
    
	<style name="main_textBlock_shadow" parent="main_textBlock">
        <item name="android:shadowColor">#5D5D5D</item>
        <item name="android:shadowDx">5</item>
        <item name="android:shadowDy">5</item>
        <item name="android:shadowRadius">5</item>
	</style>
	
	<style name="main_textSquare" >
	    <item name="android:textSize">20sp</item>
	    <item name="android:textStyle">bold|italic</item>
		<item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:background">@drawable/text_view_btn</item>
        <item name="android:textColor">@color/txt_square</item>
	</style>
	
	
	<style name="selfPopupStyle">  
        <item name="android:windowBackground">@android:color/transparent</item>  
        <item name="android:windowFrame">@null</item>  
        <item name="android:windowNoTitle">true</item>  
        <item name="android:windowIsFloating">true</item>  
        <item name="android:windowIsTranslucent">true</item>  
        <item name="android:windowContentOverlay">@null</item>  
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>  
        <item name="android:backgroundDimEnabled">true</item>  
    </style>
    
</resources>
